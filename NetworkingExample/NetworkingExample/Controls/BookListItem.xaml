<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NetworkingExample.Controls.BookListItem">
    <ContentView.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="20*" />
                <ColumnDefinition
                    Width="80*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>
            <Image
                Grid.Column="0"
                Grid.Row="0"
                HeightRequest="50"
                WidthRequest="50"
                Source="{Binding Image}" />
            <StackLayout
                Grid.Column="1"
                Grid.Row="0"
                Orientation="Vertical">
                <Label
                    Text="{Binding Title}" />
                <Label
                    Text="{Binding Author}" />
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>